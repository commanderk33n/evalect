<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "evaLect", main_app.root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav pull-right">
        <li><%= link_to "Startseite", main_app.root_path %></li>
        <li><%= link_to "Hilfe", main_app.help_path %></li>
        <% if logged_in? %>
            <li><%= link_to "Evaluationen", rapidfire.root_path %></li>
            <% if current_user.admin? %>
                <li><%= link_to "Adminbereich", main_app.users_path %></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profil anzeigen", main_app.user_path(current_user) %></li>
                <li><%= link_to "Profil Einstellungen", main_app.edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Ausloggen", main_app.logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
        <% else %>
            <li><%= link_to "Einloggen", main_app.login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>